<Window x:Class="SharpVisualBinaryDiff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360*"/>            
            <ColumnDefinition Width="360*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Name="TextBoxLeft" Grid.Column="0" 
                 FontFamily="Courier New"
                ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                PreviewDragEnter="OnDragOver" PreviewDragOver="OnDragOver" PreviewDrop="FileDropLeft">
            Drop file 1
        </TextBox>

        <TextBox Name="TextBoxRight" Grid.Column="2" 
                 FontFamily="Courier New"
                ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                PreviewDragEnter="OnDragOver" PreviewDragOver="OnDragOver" PreviewDrop="FileDropRight">
            Drop file 2
        </TextBox>

    </Grid>
</Window>
